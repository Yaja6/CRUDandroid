<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".InicioActivity">

    <LinearLayout
        android:layout_width="345dp"
        android:layout_height="589dp"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="42dp">

            <Button
                android:id="@+id/button4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="nuevoTelf"
                android:text="Agregar contacto"
                app:backgroundTint="#3F51B5"
                app:icon="@android:drawable/ic_menu_add"
                app:iconGravity="textEnd" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayoutEditar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="bottom"
            android:orientation="vertical"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.542"
            android:background="@drawable/border"
            app:layout_constraintStart_toStartOf="parent">


            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Editar contacto"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/nombre"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Nombre"
                android:inputType="textPersonName" />

            <EditText
                android:id="@+id/telefono"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="TelÃ©fono"
                android:inputType="number" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/button6"
                    android:layout_width="wrap_content"
                    android:layout_height="49dp"
                    android:background="#FFFFFF"
                    android:onClick="guardarTelf"
                    android:padding="8dp"
                    android:text="Guardar"
                    app:backgroundTint="@color/black"
                    app:icon="@android:drawable/ic_menu_save"
                    app:iconGravity="textEnd" />

                <Button
                    android:id="@+id/button7"
                    android:layout_width="wrap_content"
                    android:layout_height="49dp"
                    android:layout_marginLeft="3dp"
                    android:background="#FFFFFF"
                    android:padding="8dp"
                    android:text="Eliminar"
                    android:onClick="eliminarContacto"
                    app:backgroundTint="#D32D2D"
                    app:icon="@android:drawable/ic_menu_delete"
                    app:iconGravity="textEnd" />

                <Button
                    android:id="@+id/cancelar"
                    android:layout_width="67dp"
                    android:layout_height="49dp"
                    android:layout_marginLeft="3dp"
                    android:background="#0A2CE8"
                    app:backgroundTint="#3F51B5"
                    app:icon="@android:drawable/ic_menu_close_clear_cancel" />

            </LinearLayout>


        </LinearLayout>

        <ListView
            android:id="@+id/contactos"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </LinearLayout>

    <Button
        android:id="@+id/button5"
        android:layout_width="match_parent"
        android:layout_height="53dp"
        android:text="Salir"
        android:onClick="salir"
        app:backgroundTint="#D32D2D"
        app:icon="@drawable/common_full_open_on_phone"
        app:iconGravity="textEnd"
        app:iconPadding="0dp"
        app:iconSize="40dp" />

</LinearLayout>